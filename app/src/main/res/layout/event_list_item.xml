<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/choice_image"
        android:layout_width="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="66dp"
        android:src="@mipmap/ic_launcher"
       />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/userListItem"
        android:layout_toRightOf="@id/choice_image"
         android:padding="10dp"
        android:paddingBottom="2dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtlastgist"
        android:layout_toRightOf="@id/choice_image"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:maxLines="2"

        android:text=""
        android:layout_below="@id/userListItem"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtTiming"
        android:text=""
        android:layout_toRightOf="@id/choice_image"
        android:layout_toEndOf="@id/choice_image"
        android:layout_marginTop="7dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/txtlastgist"
        android:textColor="@color/very_dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layoutdown"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
android:visibility="gone"
        android:layout_below="@id/txtlastgist"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtNew"
        android:text="0"
         android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:visibility="visible"

        android:textColor="@color/very_dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/comenta"
        android:layout_below="@id/txtlastgist"

        android:layout_toRightOf="@id/txtNew"
        android:layout_alignTop="@id/txtNew"
        android:src="@drawable/commenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>

    </LinearLayout>

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:rotation="270"
        android:layout_marginTop="10dp"
    android:src="@drawable/arrowboy"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"/>

</RelativeLayout>
