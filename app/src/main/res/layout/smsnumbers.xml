<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are allowed to sent SOS SMS alerts to as many as 3 people when there is trouble in your Home Zone. Please enter at least 1 mobile number.  Include country code (+1, +234 etc): "
        android:textSize="15sp"
         />

    <EditText
        android:id="@+id/txtNumber1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="1st Mobile Number"
        android:inputType="phone"
        />

    <EditText
        android:id="@+id/txtNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="2nd Mobile Number"
        android:inputType="phone"
        >

        <requestFocus />

    </EditText>

    <EditText
        android:id="@+id/txtNumber3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="3rd Mobile Number"
        android:inputType="phone"
        >

        <requestFocus />

    </EditText>


</LinearLayout>